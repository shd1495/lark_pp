<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zkzkdh451.mapper.BoardMapper">

	<sql id="criteria">
		<trim prefix="AND (" suffix=") " prefixOverrides = "OR">
			<foreach item="type" collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							title LIKE concat('%',#{keyword},'%')
						</when>
						<when test="type == 'C'.toString()">
							content LIKE concat('%',#{keyword},'%')
						</when>
						<when test="type == 'W'.toString()">
							writer LIKE concat('%',#{keyword},'%')
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>	
	</sql>
	
	<insert id="insert">
		INSERT INTO lark_board (title, content, userid)
		VALUES (#{title}, #{content}, #{userid})
	</insert>
	
	<select id="getList" resultType="com.zkzkdh451.domain.BoardVO">
	
		SELECT *  
		FROM lark_board 
	<![CDATA[
		WHERE bno > 0 
	]]>
		
		<include refid="criteria"></include>
		
		ORDER BY bno DESC 
		LIMIT #{start}, #{amount}
	</select>
	
	<select id="getTotalCount" resultType="int">
	<![CDATA[
		SELECT count(*)
		FROM lark_board 
		WHERE bno > 0 
	]]>
	
		<include refid="criteria"></include>
	</select>
	
	<select id="get" resultType="com.zkzkdh451.domain.BoardVO">
		SELECT * FROM lark_board WHERE bno = #{bno}
	</select>
	
</mapper>